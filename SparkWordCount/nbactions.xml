            <actionName>build</actionName>
            <packagings>
                <packaging>*</packaging>
            </packagings>
            <goals>
                <goal>install</goal>
            </goals>
            <properties>
                <Env.SPARK_HOME>/usr/local/spark</Env.SPARK_HOME>
