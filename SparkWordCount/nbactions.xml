                <goal>clean</goal>
                <goal>install</goal>
            </goals>
            <properties>
                <Env.SPARK_HOME>/usr/local/spark</Env.SPARK_HOME>
                
                <env>local</env>
            </properties>
        </action>
        <action>
            <actionName>test</actionName>
            <packagings>
                <packaging>*</packaging>
            </packagings>
            <goals>
                <goal>test</goal>
            </goals>
            <properties>
                <Env.SPARK_HOME>/usr/local/spark</Env.SPARK_HOME>
            </properties>
        </action>
    </actions>
